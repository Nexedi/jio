{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-empty": ["error", {
      "allowEmptyCatch": true
    }],
    "max-len": ["error", 80],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "one-var": ["error", {
      "var": "always",
      "const": "never",
      "let": "never"
    }]
  }
}
